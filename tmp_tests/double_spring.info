name "Double spring/mass system"
descriptions "A mass connected to a spring connected to a mass connected to a spring connected to the wall..."

slaves {
    spring1 {
        id 1        ; This numerical ID is used when starting the slave.exe program
        init {      ; Variable initialization goes here, in the format: id value
            4 2.0   ; uncompressed length
            1 1.0   ; position B
        }
    }
    mass1  {
        id 2
        init {
            2 1.0   ; position
        }
    }
    spring2 {
        id 3
        init {
            4 2.0   ; uncompressed length
            0 1.0   ; position A
            1 3.0   ; position B
        }
    }
    mass2 {
        id 4
        init {
            2 3.0   ; position
        }
    }
}

connections {
    spring1.1 mass1.2    ; spring1 position B <- mass1 position
    mass1.0   spring1.3  ; mass1 force        <- spring1 force B

    spring2.1 mass2.2    ; spring2 position B <- mass2 position
    mass2.0   spring2.3  ; mass2 force        <- spring2 force B

    spring2.0 mass1.2    ; spring2 position A <- mass1 position
    mass1.1 spring2.2    ; mass1 force        <- spring2 force A
}
